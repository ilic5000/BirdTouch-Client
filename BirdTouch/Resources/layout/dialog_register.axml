<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:background="#DEDEDC"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minWidth="300dp"
        android:minHeight="400dp"
        android:gravity="center">
        <TextView xmlns:tools="http://schemas.android.com/tools"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterCredentials"
            android:textColor="@android:color/background_dark"
            android:layout_centerHorizontal="true" />
      <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutRegisterFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/txtFirstname"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firstname" />
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutRegisterLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/txtLastname"
            android:layout_below="@id/txtFirstname"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname" />
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutRegisterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/txtDescription"
            android:layout_below="@id/txtLastname"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profile description (e.g. Football player)" />
      </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutRegisterUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/txtUsername"
                android:inputType="text"
                android:layout_below="@id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtPassword"
                android:inputType="textPassword"
                android:layout_below="@id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutRegisterPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtPassword"
                android:inputType="textPassword"
                android:layout_below="@id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password again" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_marginTop="20dp"
            android:text="Sign up"
            android:layout_below="@id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDialogRegister"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:paddingTop="2dp"
            android:background="@drawable/buttonRegisterStyle"
            android:layout_centerHorizontal="true" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarRegister"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:visibility="gone"
            android:background="@drawable/progressbarstyle" />
    </LinearLayout>
</FrameLayout>